<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buy_Voucher">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/gr_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <RadioButton
                android:id="@+id/voucher_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/action_voucher_day" />

            <RadioButton
                android:id="@+id/voucher_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_voucher_time" />

            <RadioButton
                android:id="@+id/voucher_group4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_voucher_group4" />

            <RadioButton
                android:id="@+id/voucher_group6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_voucher_group6" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/gr_voucher_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/gr_voucher"
            app:layout_constraintTop_toBottomOf="@+id/gr_voucher">

            <RadioButton
                android:id="@+id/voucher_day_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2시간            3,000원" />

            <RadioButton
                android:id="@+id/voucher_day_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "4시간            6,000원" />

            <RadioButton
                android:id="@+id/voucher_day_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6시간            7,000원" />

            <RadioButton
                android:id="@+id/voucher_day_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8시간            8,000원" />

            <RadioButton
                android:id="@+id/voucher_day_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12시간         10,000원" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/gr_voucher_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/gr_voucher"
            app:layout_constraintTop_toBottomOf="@+id/gr_voucher">

            <RadioButton
                android:id="@+id/voucher_time_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30시간           45,000원" />

            <RadioButton
                android:id="@+id/voucher_time_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50시간           70,000원" />

            <RadioButton
                android:id="@+id/voucher_time_100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100시간         110,000원" />

            <RadioButton
                android:id="@+id/voucher_time_200"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200시간         200,000원" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/gr_voucher_group4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/gr_voucher"
            app:layout_constraintTop_toBottomOf="@+id/gr_voucher">

            <RadioButton
                android:id="@+id/voucher_group4_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2시간           12,000원" />

            <RadioButton
                android:id="@+id/voucher_group4_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4시간           15,000원" />

            <RadioButton
                android:id="@+id/voucher_group4_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6시간           20,000원" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/gr_voucher_group6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/gr_voucher"
            app:layout_constraintTop_toBottomOf="@+id/gr_voucher">

            <RadioButton
                android:id="@+id/voucher_group6_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2시간           18,000원" />

            <RadioButton
                android:id="@+id/voucher_group6_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4시간           20,000원" />

            <RadioButton
                android:id="@+id/voucher_group6_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6시간           25,000원" />
        </RadioGroup>

    <Button
        android:id="@+id/vocher_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="구매하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gr_voucher_day"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>