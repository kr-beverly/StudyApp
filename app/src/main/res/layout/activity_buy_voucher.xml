<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buy_Voucher">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="이용권"
                    android:textSize="28sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioGroup
                    android:id="@+id/gr_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView">

                    <RadioButton
                        android:id="@+id/voucher_day_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="일일이용권 2시간            3,000원" />

                    <RadioButton
                        android:id="@+id/voucher_day_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="일일이용권 4시간            6,000원" />

                    <RadioButton
                        android:id="@+id/voucher_day_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="일일이용권 6시간            7,000원" />

                    <RadioButton
                        android:id="@+id/voucher_day_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="일일이용권 8시간            8,000원" />

                    <RadioButton
                        android:id="@+id/voucher_day_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="일일이용권 12시간         10,000원" />

                    <RadioButton
                        android:id="@+id/voucher_time_30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="시간이용권 30시간           45,000원" />

                    <RadioButton
                        android:id="@+id/voucher_time_50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="시간이용권 50시간           70,000원" />

                    <RadioButton
                        android:id="@+id/voucher_time_100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="시간이용권 100시간         110,000원" />

                    <RadioButton
                        android:id="@+id/voucher_time_200"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="시간이용권 200시간         200,000원" />

                    <RadioButton
                        android:id="@+id/voucher_group4_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="단체 4인 2시간           12,000원" />

                    <RadioButton
                        android:id="@+id/voucher_group4_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="단체 4인 4시간           15,000원" />

                    <RadioButton
                        android:id="@+id/voucher_group4_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="단체 4인 6시간           20,000원" />

                    <RadioButton
                        android:id="@+id/voucher_group6_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="단체 6인 2시간           18,000원" />

                    <RadioButton
                        android:id="@+id/voucher_group6_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="단체 6인 4시간           20,000원" />

                    <RadioButton
                        android:id="@+id/voucher_group6_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="단체 6인 6시간           25,000원" />

                </RadioGroup>

                <Button
                    android:id="@+id/vocher_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="구매하기"></Button>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>